{
	"compilerOptions": {
		"strict": true,
		"lib": ["ES2020"],
		"target": "ES2019",
		"module": "CommonJS",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["node", "mocha"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["types/*.ts", "src/**/*.ts", "test/**/*.js"],
	"exclude": ["node_modules", "dist"]
}
